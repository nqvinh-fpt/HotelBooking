
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
        body {
            background-color: #f9f9fa;
        }

        .page-header {
            background-image: url(/img/carousel-1.jpg);
            background-size: cover;
            background-position: center;
        }

        .page-header-inner {
            background: rgba(0, 0, 0, 0.5); /* Optional: Add overlay for better text readability */
        }

        .container {
            max-width: 1140px; /* Adjust the max-width of the container */
        }

        .user-card-full {
            overflow: hidden;
            border-radius: 5px;
            box-shadow: 0 1px 20px rgba(69, 90, 100, 0.08);
        }

        .user-profile img {
            border-radius: 50%;
        }

        .card-block {
            padding: 1.25rem;
        }

        .card {
            border: none;
            margin-bottom: 30px;
        }

        .profile-form {
            max-width: 600px; /* Limit the width of the profile form */
            margin: 0 auto; /* Center the form */
        }

        .form-control {
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        .profile-button {
            border-radius: 5px;
            padding: 10px 20px;
        }

        h4.text-right {
            font-size: 1.5rem; /* Increase heading font size */
        }

        .text-center {
            text-align: center;
        }

        .m-b-25 {
            margin-bottom: 25px;
        }
</style>
<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 p-0">
    <div class="page-header-inner py-5">
        <div class="container text-center pb-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Profile</h1>
            <nav aria-label="breadcrumb">
            </nav>
        </div>
    </div>
</div>
<!-- Page Header End -->

<div class="container rounded bg-white mt-5 mb-5 user-card-full">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle mt-5" width="150px" src="https://img.icons8.com/bubbles/100/000000/user.png">
                <span class="font-weight-bold">@Model.FirstName @Model.LastName</span>
                <span class="text-black-50">@Model.Email</span>
                <span> </span>
            </div>
        </div>
        <div class="col-md-9">
            <form asp-action="Profile" method="post" class="profile-form">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label class="labels">First Name</label>
                            <input type="text" class="form-control" name="FirstName" placeholder="First name" value="@Model.FirstName">
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Last Name</label>
                            <input type="text" class="form-control" name="LastName" value="@Model.LastName" placeholder="Last name">
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels">Mobile Number</label>
                            <input type="text" class="form-control" name="PhoneNumber" placeholder="Enter phone number" value="@Model.PhoneNumber">
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Address</label>
                            <input type="text" class="form-control" name="Address" placeholder="Enter address" value="@Model.Address">
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Email</label>
                            <input type="text" class="form-control" name="Email" placeholder="Enter email" value="@Model.Email">
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Username</label>
                            <input type="text" class="form-control" name="Username" placeholder="Username" value="@Model.Username" readonly>
                        </div>
                        <input type="hidden" name="Password" value="@Model.Password">
                    </div>
                    <div class="mt-5 text-center">
                        <button class="btn btn-primary profile-button" type="submit">Save Profile</button>
                    </div>
                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success mt-3">@ViewBag.SuccessMessage</div>
                    }
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>